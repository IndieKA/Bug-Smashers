    this.color = color;
    Block.prototype.draw = function(cam) {
        var view = cam.view(this);

        if (view) {
            noStroke();
            stroke(222, 222, 222);
            fill(214, 214, 214);
            rect(view.x, view.y, view.w, view.h);
            noStroke();
